# =============================================================================
# Email Configuration
# =============================================================================

# Primary Email Configuration (Gmail)
EMAIL_PROTOCOL=smtp
EMAIL_SMTP_HOST=tls://smtp.gmail.com
EMAIL_SMTP_PORT=465
EMAIL_SMTP_USER=your-smtp-user@example.com
EMAIL_SMTP_PASSWORD=YOUR_SMTP_PASSWORD_HERE
EMAIL_MAILTYPE=html
EMAIL_CHARSET=iso-8859-1
EMAIL_WORDWRAP=TRUE
EMAIL_NEWLINE=\r\n

# Alternative Email Configuration (Corporate)
EMAIL_ALT_PROTOCOL=smtp
EMAIL_ALT_SMTP_HOST=ssl://mail.nusantararegas.com
EMAIL_ALT_SMTP_PORT=587
EMAIL_ALT_SMTP_USER=your-corporate-user@example.com
EMAIL_ALT_SMTP_PASSWORD=YOUR_SMTP_PASSWORD_HERE

# Pertamina Email Configuration
EMAIL_PERTAMINA_PROTOCOL=smtp
EMAIL_PERTAMINA_SMTP_HOST=smtp.example.com
EMAIL_PERTAMINA_SMTP_PORT=25
EMAIL_PERTAMINA_SMTP_USER=your-pertamina-user@example.com
EMAIL_PERTAMINA_SMTP_PASSWORD=YOUR_SMTP_PASSWORD_HERE
EMAIL_PERTAMINA_SMTP_CRYPTO=tls

# Email From Addresses
EMAIL_FROM_ADDRESS=no-reply@example.com
EMAIL_FROM_NAME=E-Proc Nusantara Regas
EMAIL_VMS_FROM_ADDRESS=no-reply@example.com
EMAIL_VMS_FROM_NAME=VMS REGAS
